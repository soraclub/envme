## 变动的php文件做语法检查
function phpl()
{ 
    if [[ -d ./.svn ]]; then
        svn st | grep -P '^[MA]' | awk '{print $NF}' | xargs -n1 php -l
    elif [[ -d ./.git ]]; then
        git status -s | awk '{print $2}' | xargs -n1 php -l
    fi
}
