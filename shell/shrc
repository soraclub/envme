export PATH=$HOME/.local/bin:$HOME/bin:$HOME/godev/lib/bin:$HOME/godev/work/bin:$PATH
export SVN_EDITOR="vim"
export EDITOR="vim"
export VISUAL="vim"

export PS4='[${FUNCNAME[0]}:$LINENO] > '
