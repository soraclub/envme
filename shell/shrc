function pathmunge()
{
    if ! echo $PATH | /bin/grep -qE "(^|:)$1($|:)" ; then
        if [ "$2" = "after" ] ; then
            PATH=$PATH:$1
        else
            PATH=$1:$PATH
        fi
    fi
}

LANG="en_US.UTF-8"
alias vin='vim +":NERDTreeToggle"'
alias vi='vim'
alias vo='vim -O'
alias chmy="sudo chown $USER.$USER" 
alias rm='rm -i'

## 变动的php文件做语法检查
function phpl()
{ 
    if [[ -d ./.svn ]]; then
        svn st | grep -P '^[MA]' | awk '{print $NF}' | xargs -n1 php -l
    elif [[ -d ./.git ]]; then
        git status -s | awk '{print $2}' | xargs -n1 php -l
    fi
}
